{
  "manifest_version": 2,

  "name": "Auburn University Professor Reviews",
  "description": "Google Chrome Extension for viewing anonymous professor reviews while searching for classes on Tiger Scheduler",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Click somewhere on Tiger Scheduler page before opening extension."
  },
  "icons": {
    "16": "au-logo16.png",
    "48": "au-logo48.png",
    "128": "au-logo128.png"
  },
  "permissions": [
    "https://tigerschedule.auburn.edu/*",
    "http://tigerschedule.auburn.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://tigerschedule.auburn.edu/*",
        "http://tigerschedule.auburn.edu/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'sha256-v3a5Sn4isYQ6QGOn9j7CvLfTnnp0LjCKNRXfj4Zfjqo=' https://unpkg.com/react-bootstrap@next/dist/react-bootstrap.min.js; object-src 'self'"
}
